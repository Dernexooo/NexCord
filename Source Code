                    await asyncio.sleep(2)
                except Exception as e:
                    print(WHITE + f"Error sending messages in {channel.name}: {e}" + RESET)
                    break

        for ch in new_channels:
            if not isinstance(ch, Exception):
                asyncio.create_task(spam_channel(ch))

